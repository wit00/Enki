<%= form_for(@card) do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :question %><br>
    <%= f.text_area :question %>
  </div>
  <div class="field">
    <%= f.label :answer %><br>
    <%= f.text_area :answer %>
  </div>
  <%= f.hidden_field :score, :value => 1 %>
  <% if signed_in? %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="actions">
        <%= f.submit %>
    </div>
  <% else %>
    <!-- don't let the user submit -->
    <p>Sorry. You must be signed in to create new cards.</p>
  <% end %>
